{
  "name": "forest_atlas_template",
  "version": "1.4.2",
  "description": "Template for the WRI Forest Atlas that will be available through ArcGIS Online.",
  "main": "index.html",
  "scripts": {
    "start": "webpack-dev-server --open --config webpack.development.js",
    "build": "webpack --config webpack.production.js --display-origins --display-provided-exports --display-reasons",
    "lib": "webpack --config webpack.lib-production.js --display-origins --display-provided-exports --display-reasons",
    "clean": "rm -rf node_modules; rm package-lock.json",
    "profile": "webpack --profile --json > stats.json",
    "log": "echo \"\\033[32mFired Script!\"",
    "serve": "webpack-dev-server --mode production --open --https --compress",
    "test": "jest",
    "prettier": "prettier --write \"src/**/*.ts?(x)\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wri/forest_atlas_template.git"
  },
  "keywords": [
    "wri",
    "arcgis",
    "agol",
    "esri",
    "javascript"
  ],
  "author": "BlueRaster",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wri/forest_atlas_template/issues"
  },
  "homepage": "https://github.com/wri/forest_atlas_template#readme",
  "jest": {
    "testURL": "http://localhost/",
    "verbose": true,
    "globals": {
      "NODE_ENV": "test"
    },
    "transform": {
      "^.+\\.[t|j]sx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "js/layers/TerraILayer": "<rootDir>/tests/__mocks__/constructor.js",
      "js/layers/GladLayer": "<rootDir>/tests/__mocks__/constructor.js",
      "js/layers/CartoLayer": "<rootDir>/tests/__mocks__/constructor.js",
      "js/layers/TreeCoverLossLayer": "<rootDir>/tests/__mocks__/class.js",
      "js/layers/TreeCoverGainLayer": "<rootDir>/tests/__mocks__/class.js",
      "js/layers/FormaLayer": "<rootDir>/tests/__mocks__/constructor.js",
      "^esri/layers/": "<rootDir>/tests/__mocks__/constructor.js",
      "dojo/_base/declare": "<rootDir>/tests/__mocks__/constructor.js",
      "esri/Map": "<rootDir>/config/__mocks__/constructor.js",
      "esri/config": "<rootDir>/config/__mocks__/config.js",
      "^dojo(.*)$": "<rootDir>/config/__mocks__/object.js",
      "^esri(.*)$": "<rootDir>/config/__mocks__/object.js",
      "^dijit(.*)$": "<rootDir>/config/__mocks__/object.js"
    },
    "moduleDirectories": [
      "node_modules",
      "src",
      "configs"
    ]
  },
  "dependencies": {
    "date-fns": "^2.11.1",
    "lodash-es": "^4.17.15",
    "rc-slider": "^9.2.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-measure": "^2.3.0",
    "react-redux": "^7.1.3",
    "react-spinners-css": "^1.1.7",
    "react-tooltip": "^3.11.2",
    "redux": "^4.0.5",
    "redux-logger": "^3.0.6",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@types/react-measure": "^2.0.6",
    "@arcgis/webpack-plugin": "~4.14.0",
    "@svgr/webpack": "^5.0.1",
    "@types/jest": "^24.9.1",
    "@types/lodash-es": "^4.17.3",
    "@types/node": "^13.1.4",
    "@types/rc-slider": "^8.6.5",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/react-tooltip": "^3.11.0",
    "@types/redux-logger": "^3.0.7",
    "@typescript-eslint/eslint-plugin": "^2.15.0",
    "@typescript-eslint/parser": "^2.15.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^3.0.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.1",
    "enzyme": "^3.11.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.0.0",
    "jest": "^25.1.0",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "redux-devtools-extension": "^2.13.8",
    "resolve-url-loader": "^3.1.1",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.2",
    "terser-webpack-plugin": "^2.3.1",
    "ts-jest": "^25.0.0",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.4",
    "url-loader": "^3.0.0",
    "webpack": "^4.20.1",
    "webpack-cli": "~3.3.5",
    "webpack-dev-server": "^3.1.10",
    "webpack-hasjs-plugin": "^1.0.3",
    "webpack-merge": "^4.2.2"
  },
  "arcgis": {
    "type": "jsapi"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
