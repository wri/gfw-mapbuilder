{
  "compilerOptions": {
    "module": "amd",
    "baseUrl": ".",
    "paths": {
      "js/*": ["src/js/*"],
      "css/*": ["src/css/*"]
    },
    "lib": ["dom", "es2015.promise", "es5", "es6"],
    "target": "es5",
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "declaration": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "types": ["arcgis-js-api", "moment", "node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
