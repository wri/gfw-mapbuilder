//- General modal styling
.modal-wrapper
  position fixed
  z-index 100
  bottom 0
  right 0
  left 0
  top 0

.modal-container
  position absolute
  height 100%
  width 100%
  left 0
  top 0

.modal-background
  background-color rgba(0, 0, 0, 0.35)
  height 100%
  width 100%

.modal
  transform translate(-50%, -50%)
  background-color white
  max-height 100%
  position fixed
  height auto
  left 50%
  top 50%
  & a
    word-break break-word
    word-wrap break-word

  &.draggable
    top 250px
    cursor grab
    z-index 100

.close-icon
  position absolute
  height 40px
  width 40px
  right 0
  top 0
  z-index 10
  
  & svg
    //transform translate(-50%, -50%)
    position absolute
    height 50%
    width 50%
    //left 50%
    top 60%
    margin-left 0.25rem

.mobile-show.close-icon
  height 60px
  width 60px

.modal-title
  padding 10px 20px 0
  text-align center
  font-size 21px

.modal-content
  padding 20px 30px 20px 20px
  overflow-x hidden
  max-height 450px
  overflow-y auto
  color $darkGray
  height 100%

.no-info-available
  text-align center
  line-height 40px
  height 40px

//- Analysis Modal
.analysis-modal-container .modal
.coordinates-modal-container .modal
  overflow-y auto
  width 320px
  height 500px
  // & .analysis-instructions__separator
  //   display none
  & .modal-content
    max-height 100%

@media (min-width: $mobileBreak)
  .analysis-modal-container
  .coordinates-modal-container
    & .analysis-instructions__header--additional
      font-size inherit
      margin 5px 0

//- Share Modal
#share-modal
  z-index 10
  & .modal-content
    width 300px
  & .share-instructions
    padding-bottom 10px
    font-size 13px
  & .share-items
    justify-content center
    display flex
    & svg
      transform translate(-50%, -50%)
      position absolute
      height 20px
      width 20px
      fill white
      left 50%
      top 50%

.share-card
  transition all 0.1s ease-in-out
  position relative
  height 40px
  width 40px

.googleplus-modal
  background $googleRed
  &:hover
    background darken($googleRed, 25%)

.facebook-modal
  background $facebookBlue
  margin 0 0.5rem
  &:hover
    background darken($facebookBlue, 25%)

.twitter-modal
  background $twitterBlue
  margin 0 0.5rem
  &:hover
    background darken($twitterBlue, 25%)

.share-input
  margin-bottom 15px
  height 40px
  & input
    border 1px solid $lightGrayBorder
    text-align center
    font-size 13px
    height 100%
    width 70%
  & button
    text-transform uppercase
    -webkit-appearance none
    text-align center
    line-height 38px
    border-radius 0
    font-weight 500
    font-size 14px
    outline none
    height 100%
    width 30%
    padding 0

//- Canopy Modal specific styling
.canopy-modal-container
  & .modal-content
    width 340px
    height 210px
  & .irs-line-left
  & .irs-line-right
  & .irs-line-mid
    background white
  & .irs-grid-pol[style="left: 100%"]
  & .irs-grid-pol.small
  & .irs-slider.to
  & .irs-to
    display none
  & .irs-bar
    background $goldTheme
    border-radius 5px
    height 7px
  & .irs-grid-pol
    border-radius 50%
    height 2px
    width 2px
    top -12px
  & .irs-slider
    cursor col-resize

.trees
  margin 30px 10px 10px
  height 60px
  width 280px

.tree-icon
  margin-top 19px
  height 41px
  float left
  width 25px
  background: url('https://my.gfw-mapbuilder.org/img/tree.png') no-repeat center;

.forest-icon
  float right
  height 60px
  width 91px
  background: url('https://my.gfw-mapbuilder.org/img/forest.png') no-repeat center;

.slider-container
  margin 5px 10px
  width 280px

.dataset-zoom
  cursor pointer

.subscription-unconfirmed
  margin-bottom -10px
  .subscription-uncle
    position relative

.subscription-unconfirmed-wrap:hover .subscribe-tooltipmap
  display block
  visibility visible
  opacity 1

.subscription-unconfirmed-wrap
  display inline-block
  float left
  .subscription-svg
    width 16px
    height 16px
    cursor pointer
  .subscribe-tooltipmap
    position absolute
    background #FFFEE2
    -webkit-box-shadow 0 1px 3px rgba(85,85,85,0.25)
    box-shadow 0 1px 3px rgba(85,85,85,0.25)
    z-index 1000
    margin 0
    visibility hidden
    opacity 0
    text-transform uppercase
    color #555555
    font-weight 400
    font-size 12px
    line-height 1.25
    bottom 100%
    left 115px
    text-align center
    padding 6px 8px
    white-space nowrap
    pointer-events none
    -webkit-transform translate(-50%, 0px)
    transform translate(-50%, 0px)
    width 200px
    white-space normal

.subscribe-tooltipmap:after
  content ""
  display block
  position absolute
  width 8px
  height 8px
  background #FFFEE2
  z-index 2
  bottom 0px
  left 0px
  -webkit-transform translate(-50%, 50%) rotate(270deg)
  transform translate(-50%, 50%) rotate(270deg)
  border-width 1px
  border-color #f0f0ed
  border-style solid

.subscription-explanation
  max-width 230px

.dataset-list
  display inline-block

.step-title
  font-size 24px
  margin 0 auto
  color #555555
  text-align center

.custom-checkbox
  display inline-block
  width 50%

//- Layer modal specific styling
.layer-modal-container .modal-content:not(.no-download)
  margin-bottom 60px

.layer-modal-content
  width 500px
  & p
    line-height 1.5
    margin-top 10px

.source-header
  margin-bottom 5px

.source-title
  text-transform uppercase
  line-height 16px
  font-weight 500
  font-size 16px
  display block

.source-subtitle
  font-weight normal
  color $lightGray
  line-height 1.2
  font-size 13px
  margin-top 5px

.source-table
  border-top 1px solid $lightGrayBorder

.name-row
  font-weight bold
  margin-left 20px
  margin-top 15px
  &.no-warning
    margin-left 0

.source-row
  border-bottom 1px solid $lightGrayBorder
  display table
  width 100%
  margin 0
  &:nth-child(even)
    background #F2F2F3
  &.subscribe-row
    padding 5px
  .other-row
    font-size 15px
    &.date-created
      font-style italic
    p
      margin-top 8px
      margin-bottom 8px

.source-row dt
.source-row dd
  display table-cell
  padding 10px

.source-row dd p:last-child
  margin-bottom 0

.source-row dt
  text-transform uppercase
  font-weight 500
  font-size 11px
  width 120px

.source-row dd
  border-left 1px solid $lightGrayBorder
  padding-left 15px
  font-size 13px

.source-row .btn-delete-subscription
  -webkit-appearance none
  border 1px solid transparent
  background none
  outline none
  box-shadow none
  text-align center
  cursor pointer
  text-decoration none
  font-family "Fira GFW Sans", "Fira Sans"
  font-feature-settings "liga" 0
  display -webkit-box
  display -ms-flexbox
  display flex
  -webkit-box-pack justify
  -ms-flex-pack justify
  justify-content space-between
  -webkit-box-align center
  -ms-flex-align center
  align-items center
  font-size 14px

.delete-row, .map-row
  float right
  padding 10px 0

.delete-row-label
  padding-top 3px

.source-summary
  margin-top 20px
  font-size 13px
  & h3
    font-weight 500
    font-size 16px
  & p
    margin 10px 0

.source-credits
  color $lightGray
  font-size 12px
  & strong
    font-weight 500
    display block
    color #333

.source-learn-more
  margin 20px 0 0

.source-learn-more-link
  text-transform uppercase
  text-decoration none
  font-weight 500
  font-size 14px
  color black
  margin auto

.source-footer
  border-top 1px solid $lightGrayBorder
  background-color white
  position absolute
  display flex
  height 60px
  width 100%
  bottom 0
  left 0

.source-download
  text-decoration none
  text-transform uppercase
  font-weight 500
  font-size 14px
  margin auto

.read-more
  text-align center
  padding 10px 0 0
  font-size 13px
  margin 0
  & a
    text-decoration none
    font-style normal

.layer-colors
  list-style none
  font-size 13px
  padding 0
  margin 0
  & .circle:before
    margin 0 4px 0 -1px
    content '\25CF'
    font-size 16px

//- Search Modal
.search-widget-label
  padding 10px 0

.deg-box
  display inline-block
  -webkit-justify-content space-between
  justify-content space-between
  align-items center
  -webkit-align-items center
  // width 50%

.deg-box span
  width auto

.deg-box input.deg-input
  max-width 90px
  text-align left
  margin 13px 0 9px 5px
  padding 0
  text-align left
  outline 0
  border none
  border-bottom 1px solid #555555
  font-size 18px
  border-radius 0
  font-family inherit

.deg-box .gfw-btn
  background #e5e5df
  position relative
  display inline-block
  z-index 1
  padding 0px 12px
  border-radius 40px
  font-size 14px
  text-decoration none
  height 36px
  line-height 36px
  text-align center
  font-weight 500
  white-space nowrap
  -webkit-transition background 0.15s linear
  -moz-transition background 0.15s linear
  -o-transition background 0.15s linear
  transition background 0.15s linear

.search-submit-button
  &.fa-button
    border 0
    font-size 16px
    margin-left 5px

.delete-header
  text-align center

// Imagery Modal specific styling
.imagery-modal-container
  display block
  &.collapse
    display none


.imagery-modal__wrapper
  width 500px
  height 285px
  -webkit-box-shadow 0 1px 3px rgba(85,85,85,0.25)
  box-shadow 0 1px 3px rgba(85,85,85,0.25)

  .flex
    display flex
    align-items center

  .fa-button.white
    border 1px solid #f0ab00

  select
    -webkit-appearance none
    position absolute
    height 100%
    width 100%
    opacity 0
    left 0
    top 0
    &:hover + div
      background darken(white, 10%)

.imagery-modal__title
  font-size 12px
  font-weight bold
  line-height 21px
  color #555
  text-transform uppercase
  margin 10px 20px 10px 20px

.imagery-modal__section
  padding 0px 20px 10px 20px
  font-size 11px
  color #999
  justify-content space-between

  &.filters
    position relative
    z-index 5

 &.secondary-filters
    align-items flex-start
    min-height 60px

  &.thumbnail_container
    width 100%
    max-height 102px
    overflow-y auto
    display flex
    justify-content flex-start
    flex-wrap wrap

  .thumbnail-text
    width 50%
    p
      color #555
      line-height 1.4
      margin 0

  .thumbnail
    width 88px
    height 88px
    overflow hidden
    margin 2px
    cursor pointer
    border transparent solid 4px;
    background #999
    display flex

    &.disabled
      cursor default

      &:hover
        border transparent solid 4px;
    .svg-icon
      fill #c1c1c1

    img
      width 85px
      height auto

    &:hover
      border #555 solid 4px;

    &.selected
      border #f0ab00 solid 4px;

.imagery-modal__error
  display flex
  align-items center
  flex-direction column
  width 100%

hr
  margin 8px 0px 8px 0px
  border $lightGrayBorder 0.5px solid

.imagery-modal_section-title
  text-transform uppercase
  font-weight bold
  margin-bottom 10px

.imagery-modal_section-text
  margin 0 10px

@media (max-width: 600px)

  .imagery-modal-container
    &.collapse
      display none

      .imagery-modal__wrapper
        height 0px
        transition all 1s

  .imagery-modal__wrapper
    width 100vw
    height 400px
    transition all 1s

    .imagery-modal__section
      flex-wrap wrap
      justify-content space-between

      &.thumbnail_container
        width 100%
        max-height 150px

      .imagery-modal__item
        margin 0 0 15 0
        min-width 80vw

  .modal.draggable
    top unset
    cursor default
    bottom 0px
    transform none
    left unset
